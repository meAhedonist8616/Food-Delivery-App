<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:orientation="horizontal"
        android:background="#fc8019">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bon AppÃ©tit"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/baseline_account_circle_24"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="180dp"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#d3d3d3"
        android:hint="Search for food"
        android:textColorHint="#928e85"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/baseline_search_24"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Featured Dishes"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:background="@drawable/burger"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Burger"
                    android:textSize="20sp"
                    android:textColor="#fc8019"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <ImageButton
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:background="@drawable/pzza"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pizza"
                    android:textSize="20sp"
                    android:textColor="#fc8019"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <ImageButton
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:background="@drawable/noodle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noodles"
                    android:textSize="20sp"
                    android:textColor="#fc8019"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <ImageButton
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:background="@drawable/frenchfries"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="French Fries"
                    android:textSize="20sp"
                    android:textColor="#fc8019"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <ImageButton
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:background="@drawable/hotdog"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hot Dog"
                    android:textSize="20sp"
                    android:textColor="#fc8019"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popular Dishes"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="50dp">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:rowCount="3"
            android:columnCount="2">
            <LinearLayout
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="180sp"
                    android:layout_height="180sp"
                    android:background="@drawable/beefsteak"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beef Steak"
                    android:textSize="25sp"
                    android:textColor="#fc8019"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="180sp"
                    android:layout_height="180sp"
                    android:background="@drawable/burger"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Burger"
                    android:textSize="25sp"
                    android:textColor="#fc8019"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="180sp"
                    android:layout_height="180sp"
                    android:background="@drawable/pzza"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pizza"
                    android:textSize="25sp"
                    android:textColor="#fc8019"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="180sp"
                    android:layout_height="180sp"
                    android:background="@drawable/hotdog"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hot Dog"
                    android:textSize="25sp"
                    android:textColor="#fc8019"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="180sp"
                    android:layout_height="180sp"
                    android:background="@drawable/noodle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noodles"
                    android:textSize="25sp"
                    android:textColor="#fc8019"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="180sp"
                    android:layout_height="180sp"
                    android:background="@drawable/frenchfries"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="French Fries"
                    android:textSize="25sp"
                    android:textColor="#fc8019"
                    android:gravity="center"/>
            </LinearLayout>


        </GridLayout>
    </ScrollView>
</LinearLayout>